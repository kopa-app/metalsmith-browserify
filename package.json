{
  "name": "metalsmith-browserify",
  "version": "1.1.0",
  "description": "Metalsmith plugin to bundle JS with browserify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/metalsmith-browserify.git"
  },
  "keywords": [
    "metalsmith",
    "browserify",
    "kopa"
  ],
  "author": "Ondrej Brinkel <info@kopa.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metalsmith/metalsmith-browserify/issues"
  },
  "homepage": "https://github.com/metalsmith/metalsmith-browserify#readme",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint:js": "eslint '**/*.js'",
    "lint:prettier": "prettier --list-different '**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "husky",
      "coveralls",
      "assert-dir-equal",
      "eslint",
      "eslint-config-airbnb-base",
      "eslint-config-prettier",
      "eslint-plugin-import",
      "lint-staged",
      "jest",
      "metalsmith",
      "prettier",
      "rimraf"
    ]
  },
  "dependencies": {
    "browserify": "^16.5.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "metalsmith": "^2.3.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  }
}
