{
  "name": "metalsmith-browserify",
  "version": "1.0.0",
  "description": "Metalsmith plugin to bundle JS with browserify",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kopa-app/metalsmith-browserify.git"
  },
  "keywords": [
    "metalsmith",
    "browserify",
    "kopa"
  ],
  "author": "Ondrej Brinkel <info@kopa.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kopa-app/metalsmith-browserify/issues"
  },
  "homepage": "https://github.com/kopa-app/metalsmith-browserify#readme",
  "main": "lib/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint:js": "eslint '**/*.js'",
    "lint:prettier": "prettier --list-different '**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-import"
    ]
  },
  "dependencies": {
    "debug": "^4.0.0",
    "browserify": "^16.1.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "coveralls": "^3.0.0",
    "assert-dir-equal": "^1.1.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "lint-staged": "^7.0.0",
    "jest": "^22.4.2",
    "metalsmith": "^2.3.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  }
}
